/**
 * Example 5: With Loop Controls
 * Shows waveform with loop region functionality
 */
export function LoopExample() {
  const audioBuffer = useAudioStore((state) => state.audioBuffer);
  const loop = useAudioStore((state) => state.loop);
  const loopStart = useAudioStore((state) => state.loopStart);
  const loopEnd = useAudioStore((state) => state.loopEnd);
  const setLoopRegion = useAudioStore((state) => state.setLoopRegion);
  const toggleLoop = useAudioStore((state) => state.toggleLoop);
  const duration = useAudioStore((state) => state.duration);

  const handleSetLoopToSelection = () => {
    // Set loop to middle 50% of audio
    const start = duration * 0.25;
    const end = duration * 0.75;
    setLoopRegion(start, end);
  };

  return (
    <div className="p-6 bg-gray-950 min-h-screen">
      <div className="max-w-4xl mx-auto space-y-6">
        <h1 className="text-2xl font-bold text-white">Loop Practice Mode</h1>

        <AudioUploader />

        {audioBuffer && (
          <>
            {/* Waveform with loop region display */}
            <WaveformDisplay height={180} />

            {/* Loop Controls */}
            <div className="bg-gray-900 rounded-lg border border-gray-800 p-4">
              <div className="flex items-center justify-between mb-4">
                <h3 className="text-sm font-semibold text-emerald-400">
                  Loop Controls
                </h3>
                <button
                  onClick={toggleLoop}
                  className={`px-4 py-2 rounded font-medium text-sm transition-colors ${
                    loop
                      ? 'bg-emerald-600 text-white'
                      : 'bg-gray-800 text-gray-400 hover:bg-gray-700'
                  }`}
                >
                  {loop ? 'Loop: ON' : 'Loop: OFF'}
                </button>
              </div>

              {loop && (
                <div className="grid grid-cols-2 gap-4 text-sm">
                  <div>
                    <label className="text-gray-400 block mb-1">
                      Loop Start
                    </label>
                    <div className="bg-gray-800 rounded px-3 py-2 font-mono text-emerald-400">
                      {loopStart.toFixed(2)}s
                    </div>
                  </div>
                  <div>
                    <label className="text-gray-400 block mb-1">
                      Loop End
                    </label>
                    <div className="bg-gray-800 rounded px-3 py-2 font-mono text-emerald-400">
                      {loopEnd.toFixed(2)}s
                    </div>
                  </div>
                </div>
              )}

              <button
                onClick={handleSetLoopToSelection}
                className="mt-4 w-full bg-gray-800 hover:bg-gray-700 text-gray-300 px-4 py-2 rounded transition-colors text-sm"
              >
                Set Loop to Middle 50%
              </button>
            </div>

            <AudioPlayer />
          </>
        )}
      </div>
    </div>
  );
}

